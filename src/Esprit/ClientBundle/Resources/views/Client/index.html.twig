{# src/Esprit/AdminBundle/Resources/views/Admin/index.html.twig #}
 
 
{% extends "EspritClientBundle::layout.html.twig" %}
 
{% block title %}
  Admin - {{ parent() }}
{% endblock %}
 
{% block espritadmin_body %}
  {# On définit un sous-titre commun à toutes les pages du bundle, par exemple #}
  <h1>Gestion des Clients</h1>
 
  <hr>
 
  <h2>Liste des Clients </h2>
 
  <ul>
    {% for client in clients %}
      <li>
        <a href="{{ path('espritclient_voir', {'id': client.id}) }}">{{ client.nom }} {{ client.prenom }}</a>
        {# service :{{client.service }},#}
        le {{ client.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) de client</li>
    {% endfor %}

  </ul>
 
{% endblock %}